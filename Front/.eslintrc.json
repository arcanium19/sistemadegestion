{
	"root": true,
	"parser": "@babel/eslint-parser",
	"parserOptions": {
	  "ecmaVersion": 2021,
	  "sourceType": "module",
	  "ecmaFeatures": {
		"jsx": true
	  }
	},
	"env": {
	  "browser": true,
	  "es2021": true,
	  "node": true
	},
	"extends": [
	  "eslint:recommended",
	  "plugin:react/recommended",
	  "plugin:@next/next/recommended"
	],
	"settings": {
	  "react": {
		"version": "detect"
	  }
	},
	"rules": {
	  // Aquí puedes agregar reglas específicas según tus preferencias
	}
  }
  